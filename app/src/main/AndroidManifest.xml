<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ltd.kaizo.mynews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mynews"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mynews"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Model.Utils.LeakCanaryApplication">
        <activity
            android:name=".Controller.Activities.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.Activities.SearchActivity"
            android:label="Search"
            android:parentActivityName=".Controller.Activities.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Controller.Activities.DetailActivity"
            android:label="Detail"
            android:parentActivityName=".Controller.Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Controller.Activities.NotificationActivity"
            android:label="notifications"
            android:parentActivityName=".Controller.Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.Activities.MainActivity" />


        </activity>

    </application>

</manifest>